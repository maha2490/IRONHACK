<!-- index.html.erb -->

<h1><%= @my_project.name %></h1>

<ul>
	<% @my_entries.each do |entry| %>
	<li>

	<%= entry.comments %> took:
	<%= entry.hours %> h
	<%= entry.minutes %> m -
	<%= entry.date %>
	<%= link_to("Delete", project_time_entry_path(@my_project, entry), 
			method: :delete, data: {confirm: "Are you sure?"}) %>

	<a href="/projects/<%= @my_project.id %>/time_entries/<%= entry.id %>/edit">
		Edit
	</a>
	</li>
	<% end %>

</ul>

<a href="/projects/<%= @my_project.id %>/time_entries/new">
	Add a time entry to <%= @my_project.name %>
</a>