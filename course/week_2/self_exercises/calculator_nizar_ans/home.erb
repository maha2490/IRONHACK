<h1>Online Calculator</h1>

<h2>Add some numbers</h2>

<form method="post" action="/calculate">
  <label>First Number:</label>
  <input type="number" name="first_number">
  <!-- params[:first_number] -->

  <label>Second Number:</label>

  <% if @memory_number.nil? %>
    <input type="number" name="second_number">
  <% else %>
    <input type="number" name="second_number" value="<%= @memory_number %>">
  <% end %>

  <!-- params[:second_number] -->

  <!-- params[:operation] -->
  <button type="submit" name="operation" value="add">
    Add
  </button>

  <button type="submit" name="operation" value="subtract">
    Subtract
  </button>

  <button type="submit" name="operation" value="multiply">
    Multiply
  </button>

  <button type="submit" name="operation" value="divide">
    Divide
  </button>
</form>